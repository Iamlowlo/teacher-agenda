<div class="template_header">
<h1>Class info</h1>
</div>
<div class="main_container">
  <dl class="regular_dl">
    <dt>Center: </dt>
    <dd>{{ model.center.name }}</dd>
    <dt>Alumn: </dt>
    <dd>{{model.alumn.fullName}}</dd>
    <dt>Day: </dt>
    <dd>{{weekday model.day}}</dd>
    <dt>Hour: </dt>
    <dd>{{hour model.beginningTime}} to {{hour model.conclusionTime}}</dd>
  </dl>
  <ul class="class_list">
  {{#each model.classinfo as |classinfo classinfo_index|}}
    <li>
      <span class="date">{{date classinfo.date}}</span>
      <ul class="field_list">
      {{log classinfo.classinfofield}}
        {{#each classinfo.classinfofield as |classinfoField classinfoField_index|}}
        <li>
          <p class="title">{{classinfoField.name}}</p>
          {{input type="checkbox" name="classinfo_field_" checked=classinfoField.checked}}
        </li>
        {{/each}}
      </ul>
    </li>
  {{/each}}
  </ul>
</div>
{{outlet}}