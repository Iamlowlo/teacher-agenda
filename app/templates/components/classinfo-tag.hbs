{{#if isToggable}}
<p class="date" {{action "toggleTag"}}>
	{{date classinfo.date}}
	<span class="icon-keyboard_arrow_down {{if isOpen "spinned_cw"}}"></span>
	{{yield}}
</p>
{{else}}
<p class="date" {{action "passTag"}}>{{date classinfo.date}}</p>
{{yield}}
{{/if}}
{{#if isOpen}}
<ul class="field_list">
	{{#each classinfo.classinfofield as |classinfoField|}}
	<li>
	  <p class="title">{{classinfoField.name}}</p>
	  {{input type="checkbox" name="classinfo_field_" checked=classinfoField.checked disabled=true}}
	  {{classinfoField.content}}
	</li>
	{{/each}}
</ul>
{{/if}}