{{#each alumns as |alumn|}}
<li class="dropable_list_element"><span class="main_info">{{alumn.fullName}}{{#if alumn.classunit}}<i class="icon-keyboard_arrow_down"></i>{{/if}}</span>
  {{#if alumn.classunit}}
  <ul class="dropable_info">
    {{#each alumn.sortedClassunits as |classunit|}}
    <li>
      <span class="remarkable">{{weekday classunit.day}}</span>
      from {{hour classunit.beginningTime}} to {{hour classunit.conclusionTime}} at
      <span class="remarkable">{{classunit.center.name}}</span> <span class="extra_info">({{classunit.center.address}})</span>
    </li>
    {{/each}}
  </ul>
  {{/if}}
</li>
{{/each}}
{{yield}}